<!-- Masthead -->

<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class=" container">
    <div class="row" style="font-family: 'Pacifico', cursive;">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5" style="font-family: 'Raleway', sans-serif;font-size:50px;opacity:0.9">Game Cart</h1>
        <h2 class="mb-5" style="font-family: 'Raleway', sans-serif;opacity:0.9">Your one stop solution for all your games ! </h2>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <form>
          <div class="form-row">
            {{# if login}}
            <div class="col-12 col-md-offset  col-md-12" style="font-family: 'Pacifico', cursive;">
              <h2 style="font-family: 'Raleway', sans-serif;opacity:0.9">Check Your Cart here! </h2>
              <br>
              <div class="  col-md-10 col-md-offset-1">
                <a type="submit" class="btn btn-block btn-lg btn-primary" href="/shopping-cart">Cart</a>
              </div>
            </div>
            {{ else }}
              <div class="col-12 col-md-offset  col-md-12" style="font-family: 'Pacifico', cursive;">
              <h2 style="font-family: 'Raleway', sans-serif;opacity:0.9">Start shopping </h2>
              <br>
              <div class="  col-md-10 col-md-offset-1">
                <a type="submit" class="btn btn-block btn-lg btn-primary" href="/">Store</a>
              </div>
            </div>
            {{/if}}
          </div>
        </form>
      </div>
    </div>
  </div>
</header>

<!-- Icons Grid -->
