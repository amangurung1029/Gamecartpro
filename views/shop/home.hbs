<!-- Call to Action -->
<section class="call-to-action text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      {{# if login}}

      <div class="col-xl-9 mx-auto" style="font-family: 'Pacifico', cursive;">
        <h2 class="mb-4" style="font-family: 'Pacifico', cursive;">Check your order history here!</h2>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <form>
          <div class="form-row">
            <div class="col-12 col-md-12" style="font-family: 'Pacifico', cursive;">
              <a href="/user/profile" class="btn btn-block btn-lg btn-primary" style="font-family: 'Pacifico', cursive;">User Account</a>
            </div>
          </div>
        </form>
      </div>
      {{ else }}

      <div class="col-xl-9 mx-auto" style="font-family: 'Pacifico', cursive;">
        <h2 class="mb-4" style="font-family: 'Raleway', sans-serif;opacity:0.9">Ready to get started? Sign up !</h2>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <form>
          <div class="form-row">
            <div class="  col-md-10 col-md-offset-1" style="font-family: 'Raleway', sans-serif;">
              <a href="/user/signup" class="btn btn-block btn-lg btn-primary" style="font-family: 'Pacifico', cursive;">Sign Up</a>
            </div>
            <div class="col-12 col-md-12" style="margin:4px 0px" style="font-family: 'Pacifico', cursive;opacity:0.9">
              <p class="mb-4">Existing user
                <a href="/user/signin"> Sign in</a>
              </p>
            </div>
          </div>
        </form>
      </div>
      {{/if}}
    </div>
  </div>
</section>
