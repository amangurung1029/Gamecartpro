<form action="/" method="GET" class="form-inline"  style="font-family: 'Raleway', sans-serif;">
    <div class="clearfix col-lg container-fluid form-group" style="margin:10px 0px;padding-left:15%">
         
        <input type="text" name="searchkeyword" class="form-control pull-left" placeholder="Search for..." style="margin:0px 5px;width: 80%">
        <input type="submit" value="Search" class="btn btn-default">
    </div>
     <div class="col-lg" {{# if undefined}}hidden{{/if}}>
         {{# if noMatch}} <h2 style="text-align:center;margin-bottom:450px"> {{ noMatch }} </h2> {{/if}}
     </div>
</form>


<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{# if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products}}
<div class="row"  style="font-family: 'Raleway', sans-serif;">
    {{# each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p class="description">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">${{this.price}}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to shopping cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}